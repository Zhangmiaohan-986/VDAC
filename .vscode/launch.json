{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File (多进程调试)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "20191118T122820306867",
                "101", 
                "1",
                "3",
                "1"
            ],
            "console": "integratedTerminal",
            // 以下是新增/修改的核心配置（支持多进程调试）
            "subProcess": true,        // 关键：启用子进程调试跟踪
            "justMyCode": false,       // 可选：允许调试导入的模块（如main.py里的missionControl）
            "env": {
                "PYTHONUNBUFFERED": "1" // 可选：确保子进程日志实时输出，不卡顿
            }
        }
    ]
}